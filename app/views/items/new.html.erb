<h1>New Item</h1>

<%= form_for @item do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :placeholder => "powder, milk, beer" %>
  </div>
  <div class="field">
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  <div class="field">
    <%= form.label :size %>
    <%= form.text_field :size, :placeholder => "gr, ml, l..." %>
  </div>
  <div class="field">
    <%= form.label :buyer_id %>
    <%= form.text_field :buyer_id, :placeholder => "put 1 or 2" %>
  </div>
  <div class="field">
    <%= form.label :shop_id %>
    <%= form.text_field :shop_id, :placeholder => "put just 1-4" %>
  </div>
  <div class="field">
    <%= form.submit 'Add', :class => "action" %>
  </div>

<% end %>