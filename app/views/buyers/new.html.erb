<h1>New buyer</h1>

<%= form_for @buyer do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :post_code %>
    <%= form.text_field :post_code %>
  </div>
  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre %>
  </div>
  <div class="field">
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
  <div class="field">
    <%= form.submit 'Add!', :class => "action"  %>
  </div>

<% end %>